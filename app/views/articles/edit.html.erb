<h2>Edit Your Complaint Here</h2>

<%= form_for :article, url: article_path(@article), method: :patch do |f| %>

<% if @article.errors.any? %>
<div id = "error_explanation">
  <h2>
    <%= pluralize(@article.errors.count, "problems") %> prohibited this complaint from being submitted.
  </h2>

  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :text %><br>
  <%= f.text_area :text %>
</p>

<p>
  <%= f.label :Name_of_physician%>
  <%= f.text_field :doctorname%>
</p>

<p>
  <%= f.label :Name_of_office%>
  <%= f.text_field :location%>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>

<h2> If you've reached this page in error, you can return <%= link_to "HERE", articles_path%> .</h2>
